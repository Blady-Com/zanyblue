#!/bin/sh
#
#  Create the ChangeLog file listing the changes from the previous
#  release to the current.
#

Here=`dirname $0`
TOP=$Here/../..
LastFile=$TOP/src/admin/rLast
ChangeLog=$TOP/ChangeLog
Previous=`cat $LastFile`
Authors=$TOP/src/admin/authors.xml
echo "Generating ChangeLog file from revision $Previous to HEAD"
svn2cl --reparagraph --group-by-day --authors=$Authors -i -r ${Previous}:HEAD $TOP -o $ChangeLog
